<?xml version="1.0"?>
<config>
    <tabs>
        <magebuzz translate="label">
            <label>Magebuzz Add-Ons</label>
            <sort_order>400</sort_order>
        </magebuzz>
    </tabs>
	<sections>
        <advancedreview translate="label" module="advancedreview">
            <label>Advanced Review</label>
            <tab>magebuzz</tab>
            <frontend_type>text</frontend_type>
            <sort_order>299</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
			<groups>
				          <general translate="label">
                    <label>Review Setting</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled_review translate="label">
                            <label>Enable Advanced Review</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_review>
                                         
                        <enabled_captcha translate="label">
                            <label>Enable Captcha</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled_captcha>
                        
                        <display_latest_review translate="label">
                          <label>Show Latest Review On The</label>
                          <frontend_type>select</frontend_type>
                          <source_model>advancedreview/advancedreview</source_model>
                          <sort_order>5</sort_order>
                          <show_in_default>1</show_in_default>
                          <show_in_website>1</show_in_website>
                          <show_in_store>1</show_in_store>
                        </display_latest_review>                        
      		              <number_latest_review translate="label">
                            <label>Number Of Review</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </number_latest_review>                        
					         </fields>   
				      </general>  
              <email_setting translate="label"> <!--Name of group-->
                    <label>Email Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <email_admin_sender translate="label comment">
                        <label>Admin Email Sender</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_email_identity</source_model>
                        <sort_order>4</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </email_admin_sender>                 
                    <recipient_admin_email translate="label">
                        <label>Send Emails To</label>
                        <frontend_type>text</frontend_type>
                      <!--  <validate>validate-email</validate>-->
                        <sort_order>3</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </recipient_admin_email>
                    <email_review_template translate="label comment">
                        <label>Admin Email Template</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_email_template</source_model>
                        <sort_order>5</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </email_review_template>
                    <email_review_customer_template translate="label comment">
                        <label>Customer Email Template</label>
                        <frontend_type>select</frontend_type>
                        <source_model>adminhtml/system_config_source_email_template</source_model>
                        <sort_order>6</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </email_review_customer_template>
                    <email_reply_to translate="label comment">
                        <label>Set Reply To</label>
                        <frontend_type>text</frontend_type>                        
                        <sort_order>7</sort_order>
                        <show_in_default>1</show_in_default>
                        <show_in_website>1</show_in_website>
                        <show_in_store>1</show_in_store>
                    </email_reply_to>
                    <!--Customer Email Template-->                   
                    </fields>
              </email_setting>
			</groups>
		</advancedreview>
    </sections>
</config>
